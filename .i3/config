bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle

# Brightness levels. Setting +/-9 because the normal behaviour is
# not inhibited, leading to an additional +/-1 when a brightness
# key is pressed.
